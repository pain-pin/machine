#!/usr/bin/bash

refresh_time
DIR=$LOCAL_JOURNAL_DIR/tcpd
SUB_DIR=${1:-"fouretou"}
mkdir -p $DIR
NAME=${2:-"tcpd"}
FILE=$DATE-$TIME.$NAME.md

DEVICE=${2:-"$(ip addr | grep -v DOWN | grep -E "^[0-9]" | awk -F':' '{print $2}' | grep -v lo)"}
NB_DEVICES="$(echo ${DEVICE} | awk '{print NF}')"

if [ $NB_DEVICES -lt "1" ] ; then
	echo no device
	echo $DEVICE
	exit 1
elif [ $NB_DEVICES -gt "1" ] ; then
	echo several devices, precise it using '$2':
	echo $DEVICE
	exit 1
fi

echo 'DEVICE='$DEVICE
echo 

sudo tcpdump -n -i $DEVICE | tee -a $FILE
chgrp root $FILE
#PIDS+="$! " 
#while true
#do
#	trap "kill -9 $PIDS && exit 0" SIGINT
#done

exit 1

