#!/usr/bin/bash

if [ "$#" -ne 1 ] ; then
    echo "Usage: $0 name"
    exit 1
fi

refresh_time
DIR=$JOURNAL_DIR/logs
mkdir -p $DIR
FILE=$1-$DATE-$TIME.md

DEVICE=${2:-"$(ip addr | grep -v DOWN | grep -E "^[0-9]" | awk -F':' '{print $2}' | grep -v lo)"}
NB_DEVICES="$(echo ${DEVICE} | awk '{print NF}')"

if [ $NB_DEVICES -ne "1" ] ; then
	echo several devices, precise it using '$2':
	echo $DEVICE
	exit 1
fi

echo 'DEVICE='$DEVICE
echo 

sudo tcpdump -n -i $DEVICE > $DIR/$FILE 
sudo chown root $DIR/$FILE

exit 0

