#!/usr/bin/bash

if [ "$#" -lt 1 ] || [ "$#" -gt 3 ]; then
    echo "Usage: $0 arg1 [arg2] [arg3]"
    exit 1
fi
#!/bin/bash

IP="$1"
DIR="${2:-${IP}_report}"

