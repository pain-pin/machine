#!/usr/bin/bash


if [ "$#" -lt 1 ] || [ "$#" -gt 1 ]; then
    echo "Usage: $0 alias"
    exit 1
fi


F=$(which "$1")

if [ ! -f "$F" ]; then
	F="$BIN_DIR/$1"
	cp $MACHINE_DIR/etc/skel/.vim/templates/template.sh $F
fi
vim "$F"
chmod +x $F

cd $BIN_DIR
git pull
gitaddcommit
git push
cd -



exit 0

