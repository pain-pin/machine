#!/usr/bin/bash

EFI=${1:-"shim.efi"}
SIGNED_EFI=${2:-"signed-$EFI"}
DB_KEY=${3:-"db.key"}
DB_CERT=${4:-"$(echo db.key | sed s/key/crt/)"}

if [ "$#" -eq 0 ] ; then 
	echo "sbsign --key $DB_KEY --cert $DB_CERT --output $SIGNED_EFI $EFI"
    echo "Usage: $0 efi"
    exit 1
fi

sbsign --key $DB_KEY --cert $DB_CERT --output $SIGNED_EFI $EFI
