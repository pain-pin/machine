#!/usr/bin/bash

EFI=${1:-"shim.efi"}
SIGNED_EFI=${2:-"signed.efi"}
DB_KEY=${3:-"db.key"}
DB_CERT=${4:-"$(echo db.key | sed s/key/cert)"}

if [ "$#" -eq 0 ] ; then 
	echo "run sbsign --key db.key --cert db.crt --output shim-signed.efi shim.efi before (or sign-db)"
	echo "sbsign --key db.key --cert db.crt --output shim-signed.efi shim.efi"
    echo "Usage: $0 efi"
    exit 1
fi

sbsign --key $DB_KEY --cert $DB_CERT --output $SIGNED_EFI $EFI
